<BotonRegreso@MDFlatButton>:
    text: "← Regresar"
    size_hint: None, None
    size: dp(130), dp(40)
    theme_text_color: 'Custom'
    text_color: 1, 1, 1, 1
    md_bg_color: 1, 1, 1, 0.3
    font_size: dp(13)

<FilaHorizontal>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: dp(8)
    padding: dp(10), dp(8)
    md_bg_color: [0.95, 0.95, 0.95, 1]
    radius: [dp(8)]
    
    # Primera fila: Campos principales
    MDBoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(48)
        spacing: dp(8)
        
        MDTextField:
            id: input_0
            mode: 'rectangle'
            font_size: dp(13)
            size_hint_x: 0.5
            text_color: 0, 0, 0, 1
            hint_text_color: 0.5, 0.5, 0.5, 1
        
        MDTextField:
            id: input_1
            mode: 'rectangle'
            font_size: dp(13)
            size_hint_x: 0.5
            text_color: 0, 0, 0, 1
            hint_text_color: 0.5, 0.5, 0.5, 1
    
    # Segunda fila: Fechas
    MDBoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(48)
        spacing: dp(8)
        
        MDTextField:
            id: input_2
            mode: 'rectangle'
            font_size: dp(13)
            size_hint_x: 0.5
            text_color: 0, 0, 0, 1
            hint_text_color: 0.5, 0.5, 0.5, 1
        
        MDTextField:
            id: input_3
            mode: 'rectangle'
            font_size: dp(13)
            size_hint_x: 0.5
            text_color: 0, 0, 0, 1
            hint_text_color: 0.5, 0.5, 0.5, 1
    
    # Tercera fila: Descripción y botón eliminar
    MDBoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(80)
        spacing: dp(8)
        
        MDTextField:
            id: input_4
            mode: 'rectangle'
            font_size: dp(13)
            multiline: True
            size_hint_x: 0.9
            text_color: 0, 0, 0, 1
            hint_text_color: 0.5, 0.5, 0.5, 1
        
        MDFlatButton:
            text: '✕'
            size_hint_x: None
            width: dp(40)
            md_bg_color: [0.9, 0.3, 0.3, 1]
            text_color: 1, 1, 1, 1
            font_size: dp(16)
            on_press: root.eliminar()

<FormacionScreen>:
    name: 'formacion'
    
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.bg_light
        
        # Top bar
        MDTopAppBar:
            title: "Formación y Educación"
            elevation: 2
            left_action_items: [["arrow-left", lambda x: root.ir_dashboard()]]
            md_bg_color: app.theme_cls.primary_color
        
        # ScrollView
        ScrollView:
            do_scroll_x: False
            
            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(18), dp(15)
                spacing: dp(12)
                size_hint_y: None
                height: self.minimum_height
                
                # Formación
                MDLabel:
                    text: 'Formación'
                    theme_text_color: 'Primary'
                    font_style: 'H6'
                    size_hint_y: None
                    height: dp(32)
                
                ScrollView:
                    size_hint: 1, None
                    height: dp(180)
                    do_scroll_x: False
                    
                    MDGridLayout:
                        id: formacion_container
                        cols: 1
                        spacing: dp(6)
                        size_hint_y: None
                        height: self.minimum_height
                        adaptive_height: True
                
                MDRaisedButton:
                    text: '+ Agregar Formación'
                    size_hint_y: None
                    height: dp(45)
                    font_size: dp(14)
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.agregar_formacion()
                
                # Educación
                MDLabel:
                    text: 'Educación'
                    theme_text_color: 'Primary'
                    font_style: 'H6'
                    size_hint_y: None
                    height: dp(32)
                
                ScrollView:
                    size_hint: 1, None
                    height: dp(180)
                    do_scroll_x: False
                    
                    MDGridLayout:
                        id: educacion_container
                        cols: 1
                        spacing: dp(6)
                        size_hint_y: None
                        height: self.minimum_height
                        adaptive_height: True
                
                MDRaisedButton:
                    text: '+ Agregar Educación'
                    size_hint_y: None
                    height: dp(45)
                    font_size: dp(14)
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.agregar_educacion()
                
                Widget:
                    size_hint_y: None
                    height: dp(10)
                
                # Botón guardar
                MDRaisedButton:
                    id: btn_guardar
                    text: 'Guardar todo'
                    size_hint_y: None
                    height: dp(48)
                    md_bg_color: [0.2, 0.7, 0.4, 1]
                    font_size: dp(15)
                    on_press: root.guardar_todo()
                
                Widget:
                    size_hint_y: None
                    height: dp(10)

